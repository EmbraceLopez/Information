<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
        </shape>
    </item>

    <item
        android:gravity="top|fill_horizontal|fill_vertical">
        <bitmap
            android:gravity="fill_horizontal|fill_vertical"
            android:src="@drawable/ic_splash3"/>

    </item>

    <item
        android:top="@dimen/dp_185"
        android:gravity="top|center_horizontal">
        <bitmap
            android:gravity="center"
            android:src="@drawable/ic_splash1" />
    </item>

    <item
        android:top="@dimen/dp_280"
            android:bottom="@dimen/dp_60"
        android:gravity="top|center_horizontal">
        <bitmap
            android:gravity="top"
            android:src="@drawable/ic_splash2" />
    </item>

</layer-list>